<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->        
        
    </style>
    
     <style name="DefaultFontStyle">   
        <item name="android:textSize">18px</item>  
        <item name="android:textColor">#0000CC</item>  
    </style>  
      
    <!-- 全局背景色-->  
    <style name="DefaultBgColor" parent="@style/DefaultFontStyle">   
        <item name="android:background">#E0FFFF</item>  
    </style>  
      
    <!-- 全局样式-->  
    <style name="DefaultStyle" parent="@style/DefaultBgColor">   
    </style>  
  
    <!-- textView字体样式-->  
    <style name="TextViewFontStyle">   
        <item name="android:textSize">20px</item>  
    </style>  
   <style name="PopupAnimation" parent="android:Animation"
		mce_bogus="1">
		<item name="android:windowEnterAnimation">@anim/popup_display</item>
		<item name="android:windowExitAnimation">@anim/popup_dismiss</item>
	</style>
</resources>